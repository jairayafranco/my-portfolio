---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { getLangFromUrl } from "../i18n/utils";
import type { Project } from "../types";

interface Props {
    project: Project;
}

const { project } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const imagePath = `/${lang === "es" ? "../../" : "../"}images/projects/${project.image}`;
---

<article
    class="rounded-2xl backdrop-blur-sm bg-slate-800/40 border border-white/10 hover:border-purple-500/50 hover:shadow-2xl hover:shadow-purple-500/20 transition-all ease-in-out hover:scale-[102%] duration-300 group overflow-hidden flex flex-col"
>
    <div class="flex gap-4 p-6 flex-row items-start">
        <Image
            alt={`${project.name} screenshot`}
            class="w-48 h-auto rounded-xl shadow-lg group-hover:shadow-2xl group-hover:shadow-purple-500/20 transition-all duration-300 flex-shrink-0"
            width={750}
            height={422}
            src={imagePath}
            loading="lazy"
            decoding="async"
        />
        <div class="flex-1 flex flex-col justify-between">
            <div>
                <h2 class="text-xl font-bold text-white mb-2">
                    {project.name}
                </h2>
                <p class="text-sm text-gray-300 leading-relaxed">
                    {project.description[lang]}
                </p>
            </div>

            <div class="flex gap-2 flex-wrap mt-4">
                <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-white bg-slate-700/50 hover:bg-slate-600/50 focus:ring-4 focus:outline-none focus:ring-purple-500/50 font-medium rounded-lg text-sm px-4 py-2 text-center inline-flex items-center transition-all duration-300 border border-white/10"
                    aria-label={`View ${project.name} on GitHub`}
                >
                    <Icon name="mdi:github" class="inline-block w-4 h-4 mr-2" aria-hidden="true" />
                    View on GitHub
                </a>
                {
                    project.website && (
                        <a
                            href={project.website}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-500 hover:to-blue-500 focus:ring-4 focus:outline-none focus:ring-purple-500/50 font-medium rounded-lg text-sm px-4 py-2 text-center inline-flex items-center transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/50"
                            aria-label={`Visit ${project.name} website`}
                        >
                            <Icon
                                name="mdi:web"
                                class="inline-block w-4 h-4 mr-2"
                                aria-hidden="true"
                            />
                            View Website
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</article>
