---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { getLangFromUrl } from "../i18n/utils";
import type { Project } from "../types";

interface Props {
    project: Project;
}

const { project } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const imagePath = `/${lang === "es" ? "../../" : "../"}images/projects/${project.image}`;
---

<article
    class="rounded-lg flex items-center hover:shadow-xl transition-all ease-in-out hover:scale-[102%] duration-300"
>
    <div class="flex gap-2 items-center m-2 p-2 flex-col md:flex-row">
        <Image
            alt={`${project.name} screenshot`}
            class="max-w-full md:max-w-[13rem] rounded-lg"
            width={750}
            height={422}
            src={imagePath}
            loading="lazy"
            decoding="async"
        />
        <div class="grow w-full">
            <h2 class="text-xl font-bold">
                {project.name}
            </h2>
            <p class="py-1 text-base">
                {project.description[lang]}
            </p>

            <div class="flex gap-2 flex-wrap mt-2">
                <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-white bg-[#24292F] hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2 text-center inline-flex items-center dark:focus:ring-gray-500 dark:hover:bg-[#050708]/30 transition-colors"
                    aria-label={`View ${project.name} on GitHub`}
                >
                    <Icon name="mdi:github" class="inline-block w-5 h-5 mr-1" aria-hidden="true" />
                    View on GitHub
                </a>
                {
                    project.website && (
                        <a
                            href={project.website}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white bg-[#205fc4] hover:bg-[#205fc4]/90 focus:ring-4 focus:outline-none focus:ring-[#205fc4]/50 font-medium rounded-lg text-sm px-5 py-2 text-center inline-flex items-center dark:focus:ring-[#205fc4]/55 transition-colors"
                            aria-label={`Visit ${project.name} website`}
                        >
                            <Icon
                                name="mdi:web"
                                class="inline-block w-5 h-5 mr-1"
                                aria-hidden="true"
                            />
                            View Website
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</article>
