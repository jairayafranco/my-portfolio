---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { getLangFromUrl } from "../i18n/utils";
import type { Project } from "../types";

interface Props {
    project: Project;
}

const { project } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const imagePath = `/${lang === "es" ? "../../" : "../"}images/projects/${project.image}`;
---

<article
    class="rounded-2xl flex items-center backdrop-blur-sm bg-slate-800/40 border border-white/10 hover:border-purple-500/50 hover:shadow-2xl hover:shadow-purple-500/20 transition-all ease-in-out hover:scale-[102%] duration-300 group"
>
    <div class="flex gap-4 items-center m-2 p-4 flex-col md:flex-row">
        <Image
            alt={`${project.name} screenshot`}
            class="max-w-full md:max-w-[13rem] rounded-xl shadow-lg group-hover:shadow-2xl group-hover:shadow-purple-500/20 transition-all duration-300"
            width={750}
            height={422}
            src={imagePath}
            loading="lazy"
            decoding="async"
        />
        <div class="grow w-full">
            <h2 class="text-xl font-bold bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent">
                {project.name}
            </h2>
            <p class="py-1 text-base text-gray-300">
                {project.description[lang]}
            </p>

            <div class="flex gap-2 flex-wrap mt-2">
                <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-white bg-gradient-to-r from-gray-800 to-gray-900 hover:from-gray-700 hover:to-gray-800 focus:ring-4 focus:outline-none focus:ring-purple-500/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center transition-all duration-300 hover:shadow-lg hover:shadow-gray-900/50 hover:-translate-y-0.5"
                    aria-label={`View ${project.name} on GitHub`}
                >
                    <Icon name="mdi:github" class="inline-block w-5 h-5 mr-1" aria-hidden="true" />
                    View on GitHub
                </a>
                {
                    project.website && (
                        <a
                            href={project.website}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-500 hover:to-blue-500 focus:ring-4 focus:outline-none focus:ring-purple-500/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/50 hover:-translate-y-0.5"
                            aria-label={`Visit ${project.name} website`}
                        >
                            <Icon
                                name="mdi:web"
                                class="inline-block w-5 h-5 mr-1"
                                aria-hidden="true"
                            />
                            View Website
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</article>
