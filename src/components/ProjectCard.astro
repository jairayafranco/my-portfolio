---
import { getLangFromUrl } from "../i18n/utils";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const { project } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<div
    class="rounded-lg flex items-center hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
    <div class="flex gap-2 items-center m-2 p-2 flex-col md:flex-row">
        <Image
            alt={project.name}
            class="max-w-full md:max-w-[13rem] rounded-lg"
            width="750"
            height="422"
            src={`/${lang === "es" ? "../../" : "../"}images/projects/${
                project.image
            }`}
            loading="lazy"
            decoding="async"
        />
        <div class="grow w-full">
            <h1 class="text-xl font-bold">
                {project.name}
            </h1>
            <p class="py-1 text-1xl">
                {project.description[lang]}
            </p>

            <div class="flex gap-1">
                <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-white bg-[#24292F] hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2 text-center inline-flex items-center dark:focus:ring-gray-500 dark:hover:bg-[#050708]/30"
                >
                    <Icon name="mdi:github" class="inline-block w-5 h-5 mr-1" />
                     View in Github
                </a>
                {
                    project.website && (
                        <a
                            href={project.website}
                            target="_blank"
                            class="text-white bg-[#205fc4] hover:bg-[#205fc4]/90 focus:ring-4 focus:outline-none focus:ring-[#205fc4]/50 font-medium rounded-lg text-sm px-5 py-2 text-center inline-flex items-center dark:focus:ring-[#205fc4]/55"
                        >
                            <Icon
                                name="mdi:web"
                                class="inline-block w-5 h-5 mr-1"
                            />
                            View Website
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</div>
