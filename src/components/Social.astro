---
import { Icon } from "astro-icon/components";
import { SOCIAL_LINKS } from "../constants/social";
---

<div class="px-4 pb-5 pt-1 flex self-center justify-center">
    {
        SOCIAL_LINKS.map(({ name, link, icon }) => (
            <a
                href={link}
                target="_blank"
                rel="noopener noreferrer"
                class="mx-3 hover:opacity-80 transition-opacity"
                aria-label={name}
                title={name}
            >
                <Icon name={icon} width="26px" />
            </a>
        ))
    }
</div>
