---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects";
import { PROFILE } from "../constants/profile";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const recentProjects = projects.slice(0, 5);
---

<Layout>
	<div class="pb-12 mt-5 relative z-10">
		<p class="text-xl py-1 text-purple-300 animate-fade-in">Hey there ðŸ‘‹</p>
		<h1 class="text-6xl font-bold bg-gradient-to-r from-white via-purple-200 to-blue-200 bg-clip-text text-transparent py-2">I'm {PROFILE.name}</h1>
		<h2 class="text-3xl py-3 font-bold bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent">{PROFILE.title}</h2>
		<p class="py-2 text-lg text-gray-300 leading-relaxed">
			{PROFILE.bio[lang]}
		</p>

		<h2 class="text-4xl w-full font-bold my-8 bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent">Recent Projects</h2>

		<div class="flex flex-col gap-4">
			{recentProjects.map((project) => (
				<ProjectCard project={project} />
			))}
		</div>
	</div>
</Layout>
